<?xml version="1.0" encoding="utf-8" ?>

<!--{
  string regex { get; set; } //String to match
  string location { get; set; } //File to search
  int priority { get; set; } //1-4 priority
  string description { get; set; } //Explanation
}-->

<RuleCollection>
  <Rules>
    <Rule>
      <Regex>
        <![CDATA[woff2]]>
      </Regex>
      <Location>web.config</Location>
      <Description>Avoid woff2 errors in browser</Description>
    </Rule>
    <Rule>
      <Regex>
        <![CDATA[<customErrors mode="Off" />]]>
      </Regex>
      <Location>web.config</Location>
      <Description>custom errors in debug</Description>
    </Rule>
    <Rule>
      <Regex>
        <![CDATA[<customErrors xdt:Transform="Replace" mode="RemoteOnly" />]]>
      </Regex>
      <Location>web.release.config</Location>
      <Description>custom errors in release</Description>
    </Rule>
    <Rule>
      <Regex>
        <![CDATA[<meta http-equiv="X-UA-Compatible" content="IE=edge" />]]>
      </Regex>
      <Location>_layout.cshtml</Location>
      <Description>Stop IE using older version</Description>
    </Rule>
    <Rule>
      <Regex>
        <![CDATA[<action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="SeeOther"/>]]>
      </Regex>
      <Location>web.release.config</Location>
      <Description>Redirect to Https</Description>
    </Rule>
  </Rules>
</RuleCollection>
